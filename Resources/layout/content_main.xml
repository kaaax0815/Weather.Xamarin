    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:designer="http://xamarin.com/mono/android/designer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbarAlwaysDrawVerticalTrack="false"
    android:scrollbars="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:minWidth="25px"
    android:focusable="true"
    android:minHeight="25px">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/relativeLayout1">
        <LinearLayout
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="visible"
            android:background="@android:color/holo_red_dark"
            android:id="@+id/nonetwork_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/main_warning"
                android:textAlignment="center"
                android:paddingTop="15px"
                android:paddingBottom="15px"
                android:id="@+id/nonetwork_txt"
                android:text="@string/nointernet"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/retry"
                android:id="@+id/nointernet_retry"
                android:background="@android:color/holo_red_dark"/>
        </LinearLayout>
        <TextView
            android:text="@string/placeholder"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="75px"
            android:layout_below="@id/nonetwork_layout"
            android:id="@+id/city_txt" />
        <TextView
            android:text="@string/placeholder"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:layout_below="@id/city_txt"
            android:id="@+id/date_txt" />
        <RelativeLayout
            android:layout_marginTop="30px"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_below="@id/date_txt"
            android:background="@drawable/layout_border"
            android:id="@+id/center_layout">
            <ImageView
                android:src="@android:drawable/ic_menu_gallery"
                android:contentDescription="@string/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/weather_img" />
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_toRightOf="@id/weather_img"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/temp_layout">
                <TextView
                    android:text="@string/placeholder"
                    android:layout_width="wrap_content"
                    android:textIsSelectable="true"
                    android:longClickable="true"
                    android:selectAllOnFocus="true"
                    android:layout_height="wrap_content"
                    android:id="@+id/temp_txt"
                    android:layout_centerVertical="true"
                    android:textSize="75px" />
                <TextView
                    android:text="@string/placeholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10px"
                    android:id="@+id/feelslike_txt"
                    android:layout_below="@id/temp_txt"
                    android:textSize="40px" />
            </RelativeLayout>
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_toRightOf="@id/temp_layout">
                <TextView
                    android:text="@string/placeholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/temp_txt"
                    android:id="@+id/sunrise_txt"
                    android:layout_marginLeft="25px"
                    android:drawableLeft="@drawable/main_sunrise" />
                <TextView
                    android:text="@string/placeholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/temp_txt"
                    android:layout_below="@id/sunrise_txt"
                    android:id="@+id/sunset_txt"
                    android:layout_marginLeft="25px"
                    android:drawableLeft="@drawable/main_sunset" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="30px"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/layout_border"
            android:layout_below="@id/center_layout"
            android:id="@+id/rain_layout">
